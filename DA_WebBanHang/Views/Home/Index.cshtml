@model IEnumerable<DA_WebBanHang.Models.SanPham>

@{
    ViewBag.Title = "Trang chủ";
}

<!-- Hero Section -->
<div class="hero-section text-center">
    <h1>Khám phá xu hướng mới</h1>
    <p class="lead">Tìm kiếm những sản phẩm chất lượng với giá tốt nhất</p>
    <div class="mt-4">
        <a href="@Url.Action("Products", "Home")" class="btn btn-primary">
            <i class="fas fa-shopping-bag me-2"></i>Xem tất cả sản phẩm
        </a>
    </div>
</div>

<!-- Featured Products Section -->
<section class="featured-products py-5">
    <div class="container">
        <div class="section-title d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">Sản phẩm nổi bật</h2>
            <a href="@Url.Action("Products", "Home")" class="text-primary text-decoration-none">
                Xem tất cả <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>

        <div class="product-grid">
            @foreach (var item in Model)
            {
                <div class="product-card">
                    <div class="product-image">
                        <img src="@item.HinhAnh" alt="@item.TenSanPham">
                    </div>
                    <div class="product-info">
                        <h3 class="product-title">@item.TenSanPham</h3>
                        <p class="product-price mb-3">@item.Gia.ToString("N0") VNĐ</p>
                        <div class="d-flex justify-content-between align-items-center">
                            @Html.ActionLink("Chi tiết", "ProductDetail", new { id = item.ID_SanPham }, new { @class = "btn btn-primary" })
                            <button class="btn btn-outline-primary" onclick="addToCart(@item.ID_SanPham)">
                                <i class="fas fa-shopping-cart"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- About Us Section -->
<section class="about-section py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <img src="/Content/Images/about-store.jpg" alt="Về chúng tôi" class="img-fluid rounded shadow">
            </div>
            <div class="col-md-6">
                <h2 class="section-title">Về chúng tôi</h2>
                <p class="section-subtitle">Hơn 10 năm kinh nghiệm trong ngành thời trang</p>
                <p>Shop Modern tự hào là điểm đến tin cậy cho những người yêu thích thời trang. Chúng tôi không chỉ cung cấp những sản phẩm chất lượng mà còn mang đến trải nghiệm mua sắm tuyệt vời nhất cho khách hàng.</p>
                <div class="features mt-4">
                    <div class="feature-item">
                        <i class="fas fa-check-circle text-primary"></i>
                        <span>Sản phẩm chính hãng 100%</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-truck text-primary"></i>
                        <span>Giao hàng toàn quốc</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-undo text-primary"></i>
                        <span>Đổi trả trong 30 ngày</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="services-section py-5">
    <div class="container">
        <h2 class="section-title text-center mb-5">Dịch vụ của chúng tôi</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="service-card text-center">
                    <i class="fas fa-shipping-fast service-icon"></i>
                    <h3>Giao hàng nhanh chóng</h3>
                    <p>Giao hàng trong vòng 24h nội thành và 2-3 ngày toàn quốc</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="service-card text-center">
                    <i class="fas fa-headset service-icon"></i>
                    <h3>Hỗ trợ 24/7</h3>
                    <p>Đội ngũ tư vấn viên luôn sẵn sàng hỗ trợ mọi lúc</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="service-card text-center">
                    <i class="fas fa-shield-alt service-icon"></i>
                    <h3>Bảo hành tận tâm</h3>
                    <p>Chính sách bảo hành và đổi trả linh hoạt</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="contact-section py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2 class="section-title">Liên hệ với chúng tôi</h2>
                <p class="mb-4">Hãy để lại thông tin, chúng tôi sẽ liên hệ với bạn sớm nhất</p>
                <form class="contact-form">
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Họ và tên">
                    </div>
                    <div class="mb-3">
                        <input type="email" class="form-control" placeholder="Email">
                    </div>
                    <div class="mb-3">
                        <textarea class="form-control" rows="4" placeholder="Nội dung"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-paper-plane me-2"></i>Gửi tin nhắn
                    </button>
                </form>
            </div>
            <div class="col-md-6">
                <div class="contact-info">
                    <h3>Thông tin liên hệ</h3>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-map-marker-alt me-2"></i>123 Đường ABC, Quận XYZ, TP.HCM</li>
                        <li><i class="fas fa-phone me-2"></i>0123 456 789</li>
                        <li><i class="fas fa-envelope me-2"></i>contact@shopmodern.com</li>
                    </ul>
                    <div class="social-links mt-4">
                        <a href="#" class="social-link"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        function addToCart(productId) {
            $.post('@Url.Action("AddToCart", "Home")', {
                productId: productId,
                quantity: 1
            }, function(result) {
                window.location.href = '@Url.Action("Cart", "Home")';
            });
        }
    </script>
}