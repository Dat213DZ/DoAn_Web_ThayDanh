@{
    ViewBag.Title = "Đăng nhập";
}

<div class="auth-form">
    <h2 class="text-center mb-4">Đăng nhập</h2>
    @using (Html.BeginForm())
    {
        <div class="form-group mb-3">
            <label class="form-label">Email:</label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="fas fa-envelope"></i>
                </span>
                <input type="email" name="email" class="form-control" required placeholder="Nhập email của bạn" />
            </div>
        </div>
        <div class="form-group mb-4">
            <label class="form-label">Mật khẩu:</label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="fas fa-lock"></i>
                </span>
                <input type="password" name="password" class="form-control" required placeholder="Nhập mật khẩu" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary w-100">
            <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
        </button>
    }
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-3">
            <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
        </div>
    }
    <div class="text-center mt-3">
        <p>
            Chưa có tài khoản?
            @Html.ActionLink("Đăng ký ngay", "Register", "Account", null, new { @class = "text-primary" })
        </p>
    </div>
</div>